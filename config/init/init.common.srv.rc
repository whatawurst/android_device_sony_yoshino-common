# Trim Area Daemon
# Last 2 args: start block(blk size 128k), number of blocks(partitionsize(kb)/128(kb))
service tad /vendor/bin/tad /dev/block/bootdevice/by-name/TA 0,16
    user oem_2997
    group oem_2997 root
    socket tad stream 0660 system oem_2993
    class trimarea

# QCOM prop
service vendor.cnd /system/vendor/bin/cnd
    class main
    user system
    group system wifi inet radio wakelock net_admin

# QCOM prop
service irsc_util /vendor/bin/irsc_util "/vendor/etc/sec_config"
    class core
    user root
    oneshot

### RADIO

# QCOM prop
service vendor.rmt_storage /vendor/bin/rmt_storage
    class core
    user root
    shutdown critical
    ioprio rt 0

# QCOM prop
service vendor.tftp_server /vendor/bin/tftp_server
    class core
    user root

# QCOM prop radio
service vendor.port-bridge /system/vendor/bin/port-bridge
    class main
    user radio
    group radio system inet
    disabled
    oneshot

# QCOM prop radio
service vendor.netmgrd /system/vendor/bin/netmgrd
    class main
    disabled

on property:ro.vendor.use_data_netmgrd=false
    # netmgr not supported on specific target
    stop vendor.netmgrd

# QCOM prop radio
service vendor.dataqti /system/vendor/bin/qti
    class main
    user radio
    group radio oem_2901 diag usb net_admin
    disabled

service vendor.dataadpl /system/vendor/bin/adpl
    class main
    user radio
    group radio oem_2901 diag usb net_admin
    disabled

on property:ro.boot.baseband=msm
    enable vendor.dataqti
    enable vendor.dataadpl
    enable vendor.netmgrd
    enable vendor.port-bridge

on property:vold.decrypt=trigger_restart_framework
    start ril-daemon
    start vendor.ipacm
    start vendor.dataqti
    start vendor.dataadpl
    start vendor.netmgrd
    start vendor.port-bridge

# QCOM prop radio
service vendor.atfwd /vendor/bin/ATFWD-daemon
    class late_start
    user system
    group system radio

on property:persist.vendor.radio.atfwd.start=false
    stop vendor.atfwd

on property:vendor.radio.atfwd.start=false
    stop vendor.atfwd

### Peripheral Manager
service per_mgr /vendor/bin/pm-service
    class core
    user system
    group system
    ioprio rt 4

service per_proxy /vendor/bin/pm-proxy
    class core
    user system
    group system
    disabled

on property:init.svc.per_mgr=running
    start per_proxy

on shutdown
    stop per_proxy

# QCOM prop
service pd_mapper /system/vendor/bin/pd-mapper
     class core

# QCOM prop
service cnss-daemon /system/vendor/bin/cnss-daemon -n -l
    class late_start
    user system
    group system inet net_admin wifi
    capabilities NET_ADMIN

on shutdown
    stop cnss-daemon

# DRM widevine
service wvkbd_installer /vendor/bin/wvkbd
    class late_start
    user system
    group system
    oneshot

### GNSS

service mlid /vendor/bin/mlid
